<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.jacoblewis.tic_tac_toe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="Tiki-Taka"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TicTacToe">
        <activity
            android:name=".Multiplayer"
            android:parentActivityName=".PreferencePage"
            android:exported="false"
            />
        <activity
            android:name=".SinglePlayer"
            android:parentActivityName=".PreferencePage"
            android:exported="false" />
        <activity
            android:name=".PreferencePage"
            android:parentActivityName=".MainActivity"
            android:exported="false" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>